<UserControl x:Class="TimetableManager.WPF.UserControls.SubjectsViewControls.AddEditSubjec"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimetableManager.WPF.UserControls.SubjectsViewControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Content="Offered Year" Grid.Column="0" Grid.Row="0" />
        <Label Content="Offered Semester" Grid.Column="0" Grid.Row="1" />
        <Label Content="Subject Name" Grid.Column="0" Grid.Row="2" />
        <Label Content="Subject Code" Grid.Column="0" Grid.Row="3" />
        <Label Content="Lecture Hours" Grid.Column="0" Grid.Row="4" />
        <Label Content="Tutorial Hours" Grid.Column="0" Grid.Row="5" />
        <Label Content="Lab Hours" Grid.Column="0" Grid.Row="6" />
        <Label Content="Evaluation Hours" Grid.Column="0" Grid.Row="7" />
        <ComboBox x:Name="YearComboBox" Grid.Column="1" Grid.Row="0">
            
        </ComboBox>
        <ComboBox x:Name="SemesterComboBox" Grid.Column="1" Grid.Row="1">
            
        </ComboBox>
        <TextBox Grid.Column="1" Grid.Row="2" />
        <TextBox Grid.Column="1" Grid.Row="3" />
        <TextBox Grid.Column="1" Grid.Row="4" />
        <TextBox Grid.Column="1" Grid.Row="5" />
        <TextBox Grid.Column="1" Grid.Row="6" />
        <TextBox Grid.Column="1" Grid.Row="7" />
        <Button Grid.Column="1" Grid.Row="8" Content="Save" />
    </Grid>
</UserControl>
