<UserControl x:Class="TimetableManager.WPF.Controls.Tab_Main_Locations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimetableManager.WPF.UserControls.LocationUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl TabStripPlacement="Top"  Grid.Column="2" Grid.Row="2" Margin="10">
            <TabItem Header="View Locations">
                <local:Tab_Locations_viewLocations/>
            </TabItem>
            <TabItem Header="Add Buildings" >
                <local:Tab_Locations_addBuildings/>
            </TabItem>
            <TabItem Header="Add Rooms/Capacity" >
                <local:Tab_Locations_addRooms/>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
